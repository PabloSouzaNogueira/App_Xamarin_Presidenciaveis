<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Presidenciaveis.Views.DescricaoCandidatoPage"
             Title="{Binding Candidato.nome, StringFormat='{0}'}">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Image  HorizontalOptions="Fill"  HeightRequest="200" Source="{Binding Candidato.foto}"/>
            <Label Text="{Binding Candidato.descricao,  StringFormat='{0}'}" FontSize="Small"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>